variable "vcenter_user" {
  description = "vcenter username"
  type        = string
  default     = "{{ vc_username }}"
}

variable "vcenter_pass" {
  description = "vcenter password"
  type        = string
  default     = "C1sco12345!"
  
}

variable "cco_password" {
  description = "new password for root account"
  type        = string
  default     = "C1sco12345!"
}

variable "activation_key" {
  description = "User Activation Key for Cisco Secure Workload"
  type = string
  default     = "75538b85236e2fbb182f20c3fe21bb37ff063177"
}

variable "cco_username" {
  description = "CCO Username for folder buildout"
  type        = string
  default     = "tetvpocadmin"
}

variable "application_name" {
  description = "Name you wish your application to use"
  type        = string
  default = "siwapp"
}

data "vsphere_datacenter" "dc" {
  name = "dc1"
}

data "vsphere_datastore" "datastore" {
  name          = "vsanDatastore"
  datacenter_id = data.vsphere_datacenter.dc.id
}

data "vsphere_compute_cluster" "compute_cluster" {
  name          = "Lab_Sandbox_VSAN"
  datacenter_id = "${data.vsphere_datacenter.dc.id}"
}

data "vsphere_network" "automation_net" {
  name          = "prod|Test_Workloads|Test_Machines"
  datacenter_id = data.vsphere_datacenter.dc.id
}

data "vsphere_distributed_virtual_switch" "vds" {
  name          = "ucsc_prod_vmm" 
  datacenter_id = "${data.vsphere_datacenter.dc.id}"
}

variable "siwapp_folder_name" {
  description = "Folder for Siwapp in vcenter"
  type        = string
  default     = "siwapp"
}

variable "domain" {
  description = "domain name for deployment"
  type        = string
  default     = "dcloud.cisco.com"
}

data "vsphere_virtual_machine" "template" {
  name          = "centos7_base"
  datacenter_id = data.vsphere_datacenter.dc.id
}

